<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onButtonClick"
        android:text="@string/start_service" />

    <Button
        android:id="@+id/btn_stop_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_start_service"
        android:onClick="onButtonClick"
        android:text="@string/stop_service" />

    <Button
        android:id="@+id/btn_start_intent_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_stop_service"
        android:onClick="onButtonClick"
        android:text="@string/start_intent_service" />

    <Button
        android:id="@+id/btn_stop_intent_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_start_intent_service"
        android:onClick="onButtonClick"
        android:text="@string/stop_intent_service" />

    <Button
        android:id="@+id/btn_set_scheduled_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_stop_intent_service"
        android:onClick="onButtonClick"
        android:text="@string/set_scheduled_service" />

    <Button
        android:id="@+id/btn_cancel_scheduled_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_set_scheduled_service"
        android:onClick="onButtonClick"
        android:text="@string/cancel_scheduled_service" />

    <Button
        android:id="@+id/btn_set_scheduled_rep_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_cancel_scheduled_service"
        android:onClick="onButtonClick"
        android:text="@string/set_scheduled_repetitive_service" />

    <Button
        android:id="@+id/btn_cancel_scheduled_rep_service"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_set_scheduled_rep_service"
        android:onClick="onButtonClick"
        android:text="@string/cancel_scheduled_repetitive_service" />

    <Button
        android:id="@+id/btn_start_service_for_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_cancel_scheduled_rep_service"
        android:onClick="onButtonClick"
        android:text="@string/start_service_for_result" />

</RelativeLayout>
