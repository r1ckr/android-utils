<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.richard.service"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:allowBackup="true">
        <activity
            android:name=".views.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".services.ServiceExample"/>
        <service android:name=".services.IntentServiceExample"/>
        <service android:name=".services.ServiceForScheduleExample"/>
        <service android:name=".services.ServiceForResultExample"/>
        
    </application>

</manifest>